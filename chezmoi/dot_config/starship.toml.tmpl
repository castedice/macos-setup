{{- if .headless }}
add_newline = false
format = "$directory$git_branch$git_status$status$character"
{{- else }}
add_newline = true
format = "$username$hostname$directory$git_branch$git_status$jobs$status$cmd_duration$time$line_break$character"
{{- end }}

[character]
success_symbol = "[>](bold green)"
error_symbol = "[x](bold red)"

[username]
show_always = true
format = "[$user]($style) "
style = "bold yellow"

[hostname]
ssh_only = false
format = "[$hostname]($style) "
style = "bold green"

[directory]
format = "[$path]($style) "
style = "blue"
truncation_length = 3
truncate_to_repo = true
read_only = " ro"
read_only_style = "red"

[git_branch]
format = "[$symbol$branch]($style) "
symbol = "git:"
style = "magenta"

[git_status]
format = "[$all_status$ahead_behind]($style) "
style = "red"

[jobs]
symbol = "+"
number_threshold = 1
format = "[$symbol$number]($style) "
style = "yellow"

[status]
disabled = false
format = "[$status]($style) "
style = "bold red"

[cmd_duration]
min_time = 500
format = "[$duration]($style) "
style = "yellow"

[time]
disabled = false
format = "[$time]($style) "
time_format = "%H:%M"
